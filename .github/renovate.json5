{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  labels: [
    'dependencies',
  ],
  packageRules: [
    {
      groupName: 'Kotlin and KSP',
      matchPackageNames: [
        'com.google.devtools.ksp{/,}**',
        'org.jetbrains.kotlin.{/,}**',
      ],
    },
    {
      groupName: 'GitHub Actions',
      matchManagers: [
        'github-actions',
      ],
      pinDigests: true,
    },
  ],
}
